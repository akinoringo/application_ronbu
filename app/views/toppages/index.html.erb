<% if logged_in? %>
  <div class="pb-5">
    <h2 class="text-center">論文一覧</h2>
  </div>
  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>タグ</th>
    </tr>
    <% @papers.each do |paper| %>
      <tr>
        <td><%= paper.id %></td>
        <td><%= paper.content %></td>
        <td>タグ</td>
      </tr>
    <% end %>
  </table>

  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @paper, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
          <%= f.file_field :image, class: 'form-control'%>
        </div>
        
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'papers/papers', papers: @papers %>
    </div>
    
  </div>
<% else %>
  <div class="center jumbotron-extend">
    <div class="row">
      <div class="col-sm-7 offset-sm-1 bg-light rounded py-2 margin-top">
        <div class="text-center py-4">
          <h3>『Ronbu』で、論文管理をもっと簡単に。</h3>
        </div>

        <%= form_with(model: @user, local: true) do |f| %>
          <%= render "layouts/error_messages", model: f.object %>
          
          <div class="form-group">
            <%= f.label :name, 'Name' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>  

          <div class="form-group">
            <%= f.label :email, 'Email' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password, 'Password' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, 'Confirmation' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>

          <%= f.submit 'Sign up', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
  <h2 class="py-4 bg-light">『Ronbu』は、<br>
    あなたの論文管理をサポートします。
  </h2>
<% end %>