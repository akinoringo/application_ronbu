<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media mb-2">
        <% if user.image.attached? %>
          <%= image_tag user.image, width: "100px", height: "100px" , class: "mr-2 rounded" %>
        <% else %>
          <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <% end %>
        <div class="media-body">
          <h4>
            <%= user.name %>
          </h4>
          <div>
            <p><%= link_to "プロフィール", user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>