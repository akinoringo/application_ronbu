<% if users.any? %>
  <ul class="list-unstyled mx-auto" style="width: 50%">
    <% users.each do |user| %>
      <li class="media mb-2">
        <% if user.image.attached? %>
          <%= image_tag user.image, width: "100px", height: "100px" , class: "mr-2 rounded" %>
        <% else %>
          <img src="/noimage.jpg" class="mr-2 rounded" style="width: 100px; height: 100px;" alt="">
        <% end %>
        <div class="media-body ml-3">
          <h4>
            <%= user.name %>
          </h4>
          <div>
            <p><%= link_to "プロフィール", user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>