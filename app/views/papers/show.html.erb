<div class="text-center py-5">
  <h1>論文詳細</h1>
</div>

<table class="table table-striped">
  <tr>
    <th>作成者</th><td><%= @paper.user.name %></td>
  </tr>
  <tr>
    <th>更新日時</th><td><%= @paper.updated_at %></td>
  </tr>  
  <tr>
    <th>タイトル</th><td>タイトル</td>
  </tr>
  <tr>
    <th>説明</th><td><%= @paper.content %></td>
  </tr>
  <tr>
    <th>ファイル</th><td><%= link_to "論文のダウンロード", "/papers/#{@paper.id}/download" %></td>
  </tr>      
</table>
<% if current_user == @paper.user %>
  <div class="text-right mb-2">
    <%= link_to '編集する', edit_paper_path(@paper), class: "mx-2" %>
    <%= link_to '削除する', @paper, method: :delete, data: {confirm: "本当に削除してよろしいですか？"}, class: "mx-2" %>
  </div>
<% end %>